<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.8"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.8
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.8.xsd">

    <changeSet id="edition_precondition" author="aek">
        <preConditions onFail="HALT">
            <sqlCheck expectedResult="0">select count(*) from (select count(distinct book.edition) as edition_count from book group by isbn) as edition_counts where edition_count > 1</sqlCheck>
        </preConditions>
    </changeSet>
</databaseChangeLog>